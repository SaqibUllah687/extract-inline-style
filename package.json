{
  "name": "extract-inline-style",
  "version": "0.1.1",
  "description": "Extracts inline style attributes (style=\"...\") from HTML elements, moves them to an external CSS file, and deduplicates identical styles.",
  "type": "module",
  "bin": {
    "extract-inline-style": "dist/cli.js"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "node --import=tsx --test test/*.ts",
    "build": "tsup",
    "prepublishOnly": "npm run build && npm test",
    "lint": "xo"
  },
  "keywords": [
    "node",
    "cli",
    "npm",
    "utility",
    "css",
    "html",
    "inline-styles",
    "extract",
    "refactor",
    "email-templates",
    "cleanup",
    "deduplicate"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mgks/extract-inline-style.git"
  },
  "bugs": {
    "url": "https://github.com/mgks/extract-inline-style/issues"
  },
  "homepage": "https://github.com/mgks/extract-inline-style#readme",
  "author": {
    "name": "mgks",
    "url": "https://mgks.dev"
  },
  "funding": "https://github.com/sponsors/mgks",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "xo": "^0.56.0"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/filename-case": "off"
    }
  }
}